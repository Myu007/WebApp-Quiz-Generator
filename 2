<body>

    <div id="upload-screen" class="app-container">
        <div class="upload-card">
            <h1 class="app-title">Quiz Generator from Excel Files</h1>
            <p class="app-subtitle">Turn your spreadsheets into interactive quizzes instantly.</p>

            <div class="drop-zone" id="dropZone" onclick="document.getElementById('fileInput').click()">
                <i class="fas fa-file-excel icon-large"></i>
                <h3>Click to Upload Excel</h3>
                <p style="color: #9ca3af; margin-top: 5px; font-size: 14px;">or drag and drop .xlsx file here</p>
                <input type="file" id="fileInput" accept=".xlsx, .xls" style="display: none" onchange="handleFile(this.files[0])">
            </div>

            <div class="loading-spinner" id="spinner"></div>
            <div class="error-msg" id="errorMsg"></div>
        </div>
    </div>

    <div id="success-screen" class="app-container">
        <div class="upload-card">
            <i class="fas fa-check-circle" style="font-size: 50px; color: #10b981; margin-bottom: 20px;"></i>
            <h2 style="margin-bottom: 10px;">File Processed!</h2>
            <div id="statsBadge" class="stats-badge">0 Questions Found</div>
            <p style="color: #666;">Your quiz is ready. What would you like to do?</p>

            <div class="success-actions">
                <button class="btn" onclick="downloadHTML()">
                    <i class="fas fa-download"></i> Download HTML
                </button>
                <button class="btn btn-secondary" onclick="openPreview()">
                    <i class="fas fa-play"></i> Play Now
                </button>
            </div>
            
            <button onclick="location.reload()" style="background:none; border:none; color:#666; margin-top:20px; cursor:pointer; text-decoration:underline;">Convert another file</button>
        </div>
    </div>

    <script>
        // --- GLOBAL VARIABLES ---
        let processedData = null;
        let originalFileName = "quiz";

        // --- DRAG AND DROP HANDLERS ---
        const dropZone = document.getElementById('dropZone');
        
        ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
            dropZone.addEventListener(eventName, preventDefaults, false);
        });

        function preventDefaults(e) {
            e.preventDefault();
            e.stopPropagation();
        }

        ['dragenter', 'dragover'].forEach(eventName => {
            dropZone.addEventListener(eventName, () => dropZone.classList.add('dragover'), false);
        });

        ['dragleave', 'drop'].forEach(eventName => {
            dropZone.addEventListener(eventName, () => dropZone.classList.remove('dragover'), false);
        });

        dropZone.addEventListener('drop', (e) => {
            const dt = e.dataTransfer;
            const files = dt.files;
            handleFile(files[0]);
        });

        // --- FILE PROCESSING LOGIC ---
        function handleFile(file) {
            if (!file) return;

            const spinner = document.getElementById('spinner');
            const errorMsg = document.getElementById('errorMsg');
            const uploadScreen = document.getElementById('upload-screen');
            const successScreen = document.getElementById('success-screen');

            // Reset UI
            spinner.style.display = 'block';
            errorMsg.style.display = 'none';
            originalFileName = file.name.replace(/\.[^/.]+$/, "");

            const reader = new FileReader();
            
            reader.onload = function(e) {
                try {
                    const data = new Uint8Array(e.target.result);
                    const workbook = XLSX.read(data, {type: 'array'});
                    
                    if (workbook.SheetNames.length === 0) throw new Error("Excel file is empty");
                    
                    const firstSheet = workbook.Sheets[workbook.SheetNames[0]];
                    const jsonData = XLSX.utils.sheet_to_json(firstSheet);
                    
                    const questions = processExcelData(jsonData);
                    
                    if (questions.length === 0) throw new Error("No valid questions found. Ensure columns are named 'Question', 'Option 1', 'Option 2'...");

                    // Store data for download/preview
                    processedData = questions;
                    
                    // Show Success UI
                    spinner.style.display = 'none';
                    document.getElementById('statsBadge').textContent = `${questions.length} Questions Generated`;
                    uploadScreen.style.display = 'none';
                    successScreen.style.display = 'flex';

                } catch (err) {
                    spinner.style.display = 'none';
                    errorMsg.textContent = "Error: " + err.message;
                    errorMsg.style.display = 'block';
                    console.error(err);
                }
            };

            reader.readAsArrayBuffer(file);
        }

        function processExcelData(data) {
            if (data.length === 0) return [];
            
            // Flexible Column Matching (Logic from your Python script)
            const firstRow = data[0];
            const keys = Object.keys(firstRow);
            
            let qKey = keys.find(k => k.toLowerCase().includes('question'));
            
            // Map keys
            return data.map(row => {
                if (!row[qKey]) return null;
                
                let answers = [];
                for(let i=1; i<=5; i++) {
                    // Try to find Option 1, Option1, option 1, etc.
                    let key = keys.find(k => k.toLowerCase().replace(/\s/g, '') === `option${i}`);
                    if (key && row[key] !== undefined) {
                        answers.push({
                            text: row[key].toString().trim(),
                            correct: (i === 1) // First option is always correct in your format
                        });
                    }
                }

                if (answers.length < 2) return null;

                return {
                    question: row[qKey].toString().replace(/"/g, '&quot;').trim(),
                    answers: answers
                };
            }).filter(q => q !== null);
        }

        // --- GENERATION LOGIC ---
        function generateHTMLContent(questions) {
            // Converts the questions array back into a format suitable for the template
            // We are injecting the exact same template logic you had in Python
            
            let jsQuestions = "";
            questions.forEach(q => {
                jsQuestions += `
                {
                    question: "${q.question}",
                    answers: [
                        ${q.answers.map(a => `{ text: "${a.text.replace(/"/g, '\\"')}", correct: ${a.correct} }`).join(',\n                        ')}
                    ]
                },`;
            });

            // The exact template from your v7 Python script (simplified for JS injection)
            // Note: I am embedding the entire CSS/HTML structure you provided previously
            return `<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>${originalFileName} - Quiz</title>
    <style>
        /* --- STYLES PRESERVED FROM V7 --- */
        * { margin: 0; padding: 0; box-sizing: border-box; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; }
        body { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); min-height: 100vh; color: #333; transition: all 0.3s ease; }
        body.dark-mode { background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%); color: #e0e0e0; }
        .container { max-width: 1200px; margin: 0 auto; padding: 20px; }
        .header { background: white; border-radius: 15px; padding: 20px; margin-bottom: 20px; display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; box-shadow: 0 8px 32px rgba(0,0,0,0.1); }
        .title { font-size: 24px; font-weight: 700; color: #2c3e50; }
        
        .question-header { background: #3f51b5; color: white; padding: 15px 20px; border-radius: 10px; margin-bottom: 25px; display: flex; align-items: center; gap: 10px; }
        .question-text { font-size: 18px; line-height: 1.6; margin-bottom: 25px; color: #2c3e50; }
        .answer-option { background: #f8f9fa; border: 2px solid #e9ecef; border-radius: 10px; padding: 15px 20px; margin-bottom: 12px; cursor: pointer; transition: all 0.3s; display: flex; gap: 15px; }
        .answer-option:hover { background: #e3f2fd; border-color: #2196f3; }
        .answer-option.selected { background: #2196f3; color: white; border-color: #1976d2; }
        .answer-option.correct { background: #4caf50; color: white; border-color: #388e3c; }
        .answer-option.incorrect { background: #f44336; color: white; border-color: #d32f2f; }
        .answer-option.disabled { pointer-events: none; opacity: 0.9; }

        .btn { padding: 10px 20px; border: none; border-radius: 8px; cursor: pointer; color: white; font-weight: bold; }
        .btn-nav { background: #3f51b5; }
        .btn-toggle { background: #f8f9fa; color: #333; border: 1px solid #ddd; margin-left: 10px; }
        
        body.dark-mode .header, body.dark-mode .question-text { background: #2c2c54; color: white; }
        body.dark-mode .answer-option { background: #40407a; border-color: #706fd3; color: white; }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <div class="title">Enhanced Quiz</div>
            <div>
                <span id="timer">00:00</span>
                <button class="btn btn-toggle" onclick="toggleDarkMode()">ðŸŒ™ Mode</button>
            </div>
        </div>
        <div style="background: white; padding: 30px; border-radius: 15px; box-shadow: 0 8px 32px rgba(0,0,0,0.1);" id="quiz-box">
            <div class="question-header">
                <span id="q-num">Question 1</span>
            </div>
            <div class="question-text" id="q-text"></div>
            <div id="answers"></div>
            <div style="margin-top: 20px; display: flex; justify-content: space-between;">
                <button class="btn btn-nav" onclick="prevQ()">Previous</button>
                <button class="btn btn-nav" onclick="nextQ()">Next</button>
            </div>
        </div>
    </div>

    <script>
        const questions = [${jsQuestions}];
        let currentIdx = 0;
        
        // Shuffle function
        function shuffle(array) {
            let currentIndex = array.length, randomIndex;
            while (currentIndex != 0) {
                randomIndex = Math.floor(Math.random() * currentIndex);
                currentIndex--;
                [array[currentIndex], array[randomIndex]] = [array[randomIndex], array[currentIndex]];
            }
            return array;
        }

        // Initialize and shuffle options immediately
        questions.forEach(q => { q.answers = shuffle(q.answers); });

        function loadQ() {
            const q = questions[currentIdx];
            document.getElementById('q-num').textContent = "Question " + (currentIdx + 1) + " / " + questions.length;
            document.getElementById('q-text').textContent = q.question;
            
            const div = document.getElementById('answers');
            div.innerHTML = '';
            
            q.answers.forEach(a => {
                const btn = document.createElement('div');
                btn.className = 'answer-option';
                btn.innerHTML = '<div>â€¢</div><div>' + a.text + '</div>';
                btn.onclick = () => checkAnswer(btn, a.correct);
                div.appendChild(btn);
            });
        }

        function checkAnswer(btn, isCorrect) {
            const all = document.querySelectorAll('.answer-option');
            all.forEach(b => b.classList.add('disabled'));
            
            if(isCorrect) {
                btn.classList.add('correct');
            } else {
                btn.classList.add('incorrect');
                // Show correct one
                questions[currentIdx].answers.forEach((a, i) => {
                    if(a.correct) all[i].classList.add('correct');
                });
            }
        }

        function nextQ() { if(currentIdx < questions.length -1) { currentIdx++; loadQ(); } }
        function prevQ() { if(currentIdx > 0) { currentIdx--; loadQ(); } }
        function toggleDarkMode() { document.body.classList.toggle('dark-mode'); }

        loadQ();
    <\/script>
</body>
</html>`;
        }

        function downloadHTML() {
            if (!processedData) return;
            
            const htmlContent = generateHTMLContent(processedData);
            const blob = new Blob([htmlContent], { type: 'text/html' });
            const url = URL.createObjectURL(blob);
            
            const a = document.createElement('a');
            a.href = url;
            a.download = `${originalFileName}_enhanced_quiz.html`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
        }

        function openPreview() {
            if (!processedData) return;
            
            const htmlContent = generateHTMLContent(processedData);
            const newWindow = window.open();
            newWindow.document.write(htmlContent);
            newWindow.document.close();
        }
    </script>
</body>
</html>
